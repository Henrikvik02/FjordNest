<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FjordNestPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FjordNestPro.styles.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @RenderSection("Styles", required: false)


</head>
<body>
    <header>
        <div id="logo">
            <img src="images/Logo.png.png" alt="FjordNest Logo">
        </div>
        <nav>
            <a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a>
            <a asp-area="Admin" asp-controller="Address" asp-action="Index" class="admin-link">Addresses</a>
            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="admin-link">Users</a>
            <a asp-area="Admin" asp-controller="Property" asp-action="Index" class="admin-link">Properties</a>
            <a asp-area="Admin" asp-controller="Booking" asp-action="Index" class="admin-link">Bookings</a>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="admin-link">Back to User-view</a>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>Kontaktinformasjon:</p>
            <p>Adresse: 123 Fjordveien, Hytteby</p>
            <p>Telefon: +47 1234 5678</p>
            <p>E-post: info@fjordnest.com</p>
            &copy; 2023 - FjordNestTest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

