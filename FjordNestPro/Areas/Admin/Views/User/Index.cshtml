@model IEnumerable<FjordNestPro.Models.ApplicationUser>
using System.Linq;

@{
    ViewData["Title"] = "Users";
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        a {
            color: #007BFF;
            text-decoration: none;
            margin-right: 10px;
        }

            a:hover {
                text-decoration: underline;
            }

        select, input[type="submit"] {
            padding: 5px;
            margin: 5px 0;
        }

        input[type="submit"] {
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        input[type="text"] {
            padding: 5px;
            margin: 5px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 200px;
        }
    </style>
}


<h1>Addresses</h1>

<p>
    <a asp-area="Admin" asp-controller="User" asp-action="Create">Create New</a>
</p>

<form asp-area="Admin" asp-controller="User" asp-action="Index" method="get">
    <label for="idSearch">ID:</label>
    <input type="text" id="idSearch" name="idSearch" value="@ViewBag.IdSearch" />

    <label for="userNameSearch">UserName:</label>
    <input type="text" id="userNameSearch" name="userNameSearch" value="@ViewBag.UserNameSearch" />

    <label for="emailSearch">Email:</label>
    <input type="text" id="emailSearch" name="emailSearch" value="@ViewBag.EmailSearch" />

    <input type="submit" value="Filter" />
</form>

<table class="table">
    <thead>
        <tr>
            @if (Model.Any())
            {
                <th>
                    @Html.DisplayNameFor(model => model.First().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Email)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                    <a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@user.Id">Details</a> |
                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
