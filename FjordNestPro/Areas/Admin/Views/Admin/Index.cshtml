@{
    ViewData["Title"] = "Admin Home Page";
}

@section Styles {
    <style>
        /* Additional CSS styles can be added here */
        .admin-panel {
            padding: 20px;
            background-color: #f7f7f7;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
        }

        .admin-link {
            display: block;
            padding: 10px 20px;
            margin: 5px 0;
            color: #007bff;
            text-decoration: none;
            border: 1px solid transparent;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .admin-link:hover {
                background-color: #007bff;
                color: #fff;
                border: 1px solid #007bff;
            }
    </style>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="admin-panel">
                <h2 class="text-center mb-4">Admin Panel</h2>
                <a asp-area="Admin" asp-controller="Address" asp-action="Index" class="admin-link">Addresses</a>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="admin-link">Users</a>
                <a asp-area="Admin" asp-controller="Property" asp-action="Index" class="admin-link">Properties</a>
                <a asp-area="Admin" asp-controller="Booking" asp-action="Index" class="admin-link">Bookings</a>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="admin-link">User View</a>
            </div>
        </div>
    </div>
</div>


