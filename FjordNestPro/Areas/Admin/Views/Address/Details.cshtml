@model FjordNestPro.Models.Address

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <style>
        h4 {
            margin-top: 20px;
            font-family: 'Arial', sans-serif; 
            color: #333;
        }

        ul {
            list-style-type: disc;
            margin-left: 20px;
            padding: 0;
        }

            ul li {
                margin-bottom: 5px;
            }

                ul li a {
                    color: #007bff;
                }

                    ul li a:hover {
                        color: #0056b3; 
                        text-decoration: underline; 
                    }
    </style>
}


<div>
    <h4>Address</h4>
    <hr />
    <div>
        <h4>Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StreetName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StreetName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Postcode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Postcode)
            </dd>
        </dl>
    </div>

    <h4>Properties</h4>
    @if (Model.Properties != null && Model.Properties.Any())
    {
        <ul>
            @foreach (var property in Model.Properties)
            {
                <li>
                    <a asp-area="" asp-controller="Property" asp-action="Details" asp-route-id="@property.PropertyID">
                        @property.Title
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Empty</p>
    }

</div>

<div>
    <a asp-area="Admin" asp-controller="Address" asp-action="Edit" asp-route-id="@Model?.AddressID">Edit</a> |
    <a asp-area="Admin" asp-controller="Address" asp-action="Index">Back to List</a>
</div>
