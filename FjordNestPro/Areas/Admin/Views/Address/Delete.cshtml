@model FjordNestPro.Models.Address

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <style>
        h1, h3, h4 {
            font-family: 'Arial', sans-serif;
        }

        .btn-danger {
            background-color: #ff4b5c;
            border: none;
            color: #fff; 
        }

        .error-message {
            color: #ff4b5c;
            font-weight: bold;
        }

        .delete-form {
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 5px;
            background-color: #f5f5f5;
            margin-top: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
        }

        a {
            color: #007bff;
        }

            a:hover {
                color: #0056b3;
            }
    </style>
}


<h1>Address</h1>

<h3>Are you sure you want to delete this?</h3>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="error-message">
        @ViewData["ErrorMessage"]
    </div>
}

<div>
    <h4>Delete</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreetName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Postcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postcode)
        </dd>
    </dl>

    <form asp-area="Admin" asp-controller="Address" asp-action="Delete">
        <input type="hidden" asp-for="AddressID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
