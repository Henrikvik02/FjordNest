@model FjordNestPro.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <style>
        h1 {
            font-family: 'Arial', sans-serif;
        }

        h3, h4 {
            font-family: 'Arial', sans-serif;
        }

        dl.row {
            margin-top: 20px;
        }

        dt.col-sm-2 {
            font-weight: bold;
        }

        dd.col-sm-10 {
            margin-bottom: 10px;
        }

        input[type="submit"] {
            background-color: #ff4b5c;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #ff1f34;
            }

        a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }

            a:hover {
                color: #0056b3;
            }
    </style>
}


<h1>Booking</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Create</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Property)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Property.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckInDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckInDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckOutDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckOutDate)
        </dd>
    </dl>
    <form asp-area="Admin" asp-controller="Booking" asp-action="Delete">
        <input type="hidden" asp-for="BookingID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-area="Admin" asp-controller="Booking" asp-action="Index">Back to List</a>
    </form>
</div>
